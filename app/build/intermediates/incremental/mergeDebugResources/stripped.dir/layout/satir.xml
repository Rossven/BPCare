<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:orientation="horizontal"
    android:weightSum="1" android:layout_width="fill_parent">
    <LinearLayout android:layout_width="wrap_content" android:orientation="vertical"
        android:id="@+id/linearLayout1" android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right"
            android:text="Ad:" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Büyük Tansiyon:"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Küçük Tansiyon:"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Tarih:"
            android:layout_gravity="right" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout2"
        android:layout_height="wrap_content" android:layout_gravity="left"
        android:layout_width="wrap_content" android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textViewname" />

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Büyük"
            android:id="@+id/textViewnumber" />

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Küçük"
            android:id="@+id/textViewnumber2" />


        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="tarih"
            android:id="@+id/textViewdate" />
    </LinearLayout>
</LinearLayout>